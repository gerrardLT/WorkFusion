{
  "name": "投研RAG智能问答系统",
  "short_name": "投研RAG",
  "description": "基于AI的投资研究报告智能分析平台，提供专业的股票投资分析和智能问答服务",
  "theme_color": "#3b82f6",
  "background_color": "#ffffff",
  "display": "standalone",
  "orientation": "portrait-primary",
  "scope": "/",
  "start_url": "/",
  "lang": "zh-CN",
  "dir": "ltr",

